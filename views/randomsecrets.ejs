<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">

    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <div class="btn-container">
      <a class="btn btn-dark btn-lg" href="/" role="button">Home</a>
      <a class="btn btn-light btn-lg" href="/register" role="button">Register</a>
      <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
    </div>
    
    
    <% UsersWithSecret.forEach(function(user){ %>
      <% (user.secret).forEach(function(foundSecret){ %>
        <div class="secret_container">
          <p class="secret-text">  <%= foundSecret %> </p>

        </div>
      <% }) %>
    <% }) %>

    

  </div>
</div>

<%- include('partials/footer') %>
